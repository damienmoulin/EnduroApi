{% extends 'base.html.twig' %}

{% block title %}{{ 'ask-reset-password.title'|trans }}{% endblock %}

{% block body %}
    <div class="sidenav" id="map">
    </div>
    <div class="main align-items-center">
        <h2 class="text-center title-card">{{ 'ask-reset-password.title'|trans }}</h2>
        <div class="login-form">
            <form class="login-form align-middle" action="" method="POST">
                {% if errorMessage %}
                    <div class="alert alert-danger">{{ errorMessage }}</div>
                {% endif %}
                <label for="inputEmail"
                       class="form-label">{{ 'ask-reset-password.form.inputEmail.label'|trans }}</label>
                <div class="form-input">
                    <input type="text" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>
                <br />
                <button type="submit" class="btn btn-success">{{ 'ask-reset-password.form.submit' | trans }}</button>
                <a href="{{ path('app_login', {'locale': app.request.locale}) }}" class="btn btn-secondary">{{ 'login.title' | trans }}</a>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </div>
    </div>
